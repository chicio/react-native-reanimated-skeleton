{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": false,
    "removeComments": true,
    "preserveSymlinks": true,
    "isolatedModules": true,
    "target": "es6",
    "module": "es6",
    "jsx": "react-native",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "lib": ["es6"],
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib"
  },
  "references": [
    {
      "path": "./packages/app"
    },
    {
      "path": "./packages/npm"
    },
    {
      "path": "./packages/web"
    }
  ],
  "include": [
    "packages/app/**/*.ts",
    "packages/app/**/*.tsx",
    "packages/npm/**/*.ts",
    "packages/npm/**/*.tsx",
    "packages/npm/react-native-reanimated-skeleton.d.ts"
  ],
  "exclude": [
    "node_modules",
    "packages/app/babel.config.js",
    "packages/app/metro.config.js",
    "packages/app/node_modules",
    "packages/npm/node_modules",
    "packages/web/node_modules",
  ]
}
